@model List<Gallery>

@{
    ViewBag.Title = "Gallery";
}

<h1>Gallery</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.FilePath" class="card-img-top" alt="" />
                <div class="card-body">
                    <a asp-controller="Gallery" asp-action="Download"
                       asp-route-photoUrl="@item.FilePath"
                       class="btn btn-primary">
                        Download
                    </a>
                </div>
            </div>
        </div>
    }
</div>
<style>
    .card-img-top {
        height: 200px; 
        object-fit: cover;
        width: 100%; 
    }

    .card {
        height: 100%; 
        display: flex;
        flex-direction: column;
    }

    .card-body {
        flex-grow: 1; 
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>