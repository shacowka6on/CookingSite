@model Recipe

@{
    ViewData["Title"] = "Edit Recipe";
}

<div class="container mt-4">
    <h1 class="display-4">Edit Recipe</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="col-md-4 order-md-1 order-1">
                    <div class="preview-box mb-3">
                        <img id="photoPreview" src="" alt="Photo Preview" class="img-fluid" style="display: none;" />
                        <div id="noPreviewText" class="text-muted">No photo to preview</div>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Name" class="form-label fw-bold">Recipe Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter recipe name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter recipe description" required></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="PhotoUrlPath" class="form-label fw-bold">Photo URL</label>
                    <input asp-for="PhotoUrlPath" class="form-control" placeholder="Enter photo URL" required />
                    <span asp-validation-for="PhotoUrlPath" class="text-danger"></span>
                </div>

                <div class="form-group d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Recipe</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('PhotoUrlPath').addEventListener('input', function () {
            const photoUrl = this.value;
            const photoPreview = document.getElementById('photoPreview');
            const noPreviewText = document.getElementById('noPreviewText');

            if (photoUrl) {
                photoPreview.src = photoUrl;
                photoPreview.style.display = 'block';
                noPreviewText.style.display = 'none';
            } else {
                photoPreview.style.display = 'none';
                noPreviewText.style.display = 'block';
            }
        });
        document.getElementById('PhotoUrlPath').addEventListener('DOMContentLoaded', function () {
            const photoUrl = this.value;
            const photoPreview = document.getElementById('photoPreview');
            const noPreviewText = document.getElementById('noPreviewText');

            if (photoUrl) {
                photoPreview.src = photoUrl;
                photoPreview.style.display = 'block';
                noPreviewText.style.display = 'none';
            } else {
                photoPreview.style.display = 'none';
                noPreviewText.style.display = 'block';
            }
        });
    </script>
}